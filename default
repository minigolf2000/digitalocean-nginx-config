server {
    listen      80 default_server;
    server_name "";
    return      444;
}

index index.html;

server {
    server_name www.golfsinteppadon.com;
    root /var/www/golfsinteppadon.com;
    ssi on;

    location / {
        try_files $uri $uri/ =404;
    }
}

server {
    server_name  golfsinteppadon.com;
    return       301 $scheme://www.golfsinteppadon.com$request_uri;
}

